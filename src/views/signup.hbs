    
    <div class="container-fluid">
        <div class="row">
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="userName">
                        Name: <input required="required" id="userName" name="name" type="text" value={{name}} >
                    </label>
                    <span>
                        {{error.name}}
                    </span>
                </div>
                <div class="form-group">
                    <label for="userEmail">
                        Email: <input id="userEmail" name="email" type="text" value={{email}} >
                    </label>
                    <span>
                        {{error.email}}
                    </span>
                </div>
                <div class="form-group">
                    <label for="userPassword">
                        Password: <input id="userPassword" name="password" type="password" >
                    </label>
                </div>
                <hr>
                <button class="btn btn-success" type="submit">SignUp</button>
            </form>
        </div>
    </div>

